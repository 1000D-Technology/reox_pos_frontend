{
  "appId": "com.reox.pos",
  "productName": "Reox POS",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "backend",
      "to": "backend",
      "filter": [
        "**/*"
      ]
    }
  ],
  "asarUnpack": [
    "backend/**/*"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "1000D-Technology",
      "repo": "reox_pos_frontend",
      "releaseType": "release"
    }
  ],
  "win": {
    "icon": "build/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publisherName": "1000D Technology"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Reox POS",
    "perMachine": false,
    "allowElevation": true
  },
  "extraMetadata": {
    "main": "electron/main.cjs"
  }
}
